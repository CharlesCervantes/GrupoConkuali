---
import { projectsPageContent } from "../../config";
import ProjectCard from "../../components/ProjectCard.astro";

export interface Props {
    id?: string;
}

const {id} = Astro.props

---


  <section id={id} class="mt-10 max-w-4xl mx-auto px-6 sectionClass">
    <h1 class="font-bold text-3xl mb-1">Proyectos</h1>
    <p class="opacity-60 mb-10">{projectsPageContent.subtitle}</p>
    <div class="grid grid-cols-1 ">
      {
        projectsPageContent.projects.map((project) => (
          <ProjectCard {...project} />
        ))
      }
    </div>
  </section>

  <style>
    .sectionClass {
    position: relative;
    z-index: 2;
    }
  </style>
